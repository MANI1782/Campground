<% layout("layouts/boilerplate") %>

    <body>
        <h1 class="text-center">ALL CAMPGROUNDS</h1>
        <a href="/campgrounds/new">Create new Camp</a>
        <ul>
            <% campgrounds.forEach(element=> { %>

                <div class="card mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-fluid" src="<%=element.images[0].url %>" alt="" srcset="">
                        </div>

                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=element.title %>
                                </h5>

                                <p class="card-text">
                                    <%=element.description%>
                                        <p>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <%=element.location %>

                                            </small>
                                        </p>

                                        <a href="/campgrounds/<%=element._id %>"><button
                                                class=" btn btn-md btn-primary">View
                                                <b>
                                                    <%=element.title%>
                                                </b>
                                            </button></a>
                            </div>
                        </div>



                    </div>

                </div>

                <% }); %>




        </ul>


    </body>