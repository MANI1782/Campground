<% layout("layouts/boilerplate") %>






    <a href="/campgrounds">HOME</a>





    <div class="row">
        <div class="col-lg-6 ">
            <div class="card mb-5">
                <img src="<%=campground.images %>" class="card-img-top img-fluid">
                <div class="card-body mb-auto">
                    <h5 class="card-title text-center">
                        <%=campground.title %>
                    </h5>
                    <p class="card-text">
                        <%=campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=campground.location%>
                    </li>
                    <li class="list-group-item">â‚¹<b>
                            <%=campground.pricing %>
                        </b>/Night</li>

                </ul>
                <div class="card-body d-inline ">
                    <a href="/campgrounds/<%=campground._id%>/edit" class="card-link btn btn-info">Edit</a>

                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">

                        <button class="btn btn-danger" type="submit">DELETE</button>
                    </form>
                    <div class="card-footer text-muted mt-2">
                        <% const rand=Math.floor(Math.random()*10)+1 %>
                            <%=`${rand}`%> days ago
                    </div>
                </div>
            </div>


        </div>
        <div class="col-6">
            <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="needs-validation" novalidate>
                <div class="mb-4">
                    <h2>Leave a rating</h2>
                    <label class="form-label" for="rating">Rating</label>
                    <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="rating">

                </div>
                <div>

                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="5" rows="3" required></textarea>
                    <div class="mt-3">
                        <button class="btn btn-success">Submit</button>
                    </div>


                    <% for(let review of campground.reviews) {%>
                        <div class="mb-3 card">
                            <div class="card-body">
                                <h5 class="card-title">Ratings: <%=review.rating %>
                                </h5>
                                <p class="card-title">Reviews: <%=review.body %>
                                </p>
                                <form action="/campgrounds/<%=campground._id %>/reviews/<%=review._id %>?_method=DELETE"
                                    method="POST">
                                    <button class="btn btn-danger btn-sm">DELETE </button>
                                </form>




                            </div>

                        </div>
                        <% } %>

            </form>
        </div>

    </div>
    </div>


    <script>
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>