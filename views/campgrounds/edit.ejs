<% layout("layouts/boilerplate") %>



    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">Edit Campground</h1>




            <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input id="title" class="form-control" type="text" name="campground[title]" placeholder=""
                        value="<%= campground.title %>">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" id="location" type="text" name="campground[location]"
                        value="<%=campground.location %>">

                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" id="image" type="text" name="campground[images]"
                        value="<%=campground.images %>">


                </div>
                <div class="mb-3">
                    <label class="form-label" for="pricing"> Pricing</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">@</span>
                        <input class="form-control" id="pricing" type="text" name="campground[pricing]"
                            placeholder="0.00" value="<%=campground.pricing %>">
                    </div>


                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" type="text"
                        name="campground[description]"><%=campground.description %></textarea>

                </div>

                <button class="btn btn-info mb-3" type="submit">Update CAMPGROUND</button>
            </form>



            <a href="/campgrounds/<%=campground._id %>">Back to Campground</a>


        </div>

    </div>